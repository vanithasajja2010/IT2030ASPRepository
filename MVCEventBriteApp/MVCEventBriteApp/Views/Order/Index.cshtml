@model MVCEventBriteApp.Models.ViewModels.CreateOrderViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Tickets Ordered</h2>
<br />
<div id="update-message"<div>
    <table>
        <tr>
            <th>Event Title</th>
            <th>Date Ordered</th>
            <th>Number Of Tickets</th>
            <th>Order Status</th>
            <th></th>
        </tr>
        
    @foreach (var item in Model.RegisteredItems)
    {
        <tr id="record-@item.OrderId">
            <td>@item.EventSelected.EventTitle</td>
            <td>@item.DateOrdered</td>
            <td id="item-count-@item.OrderId">@item.Count</td>
            <td>@item.OrderStatus</td>
            <td><a href="#" class="Remove" data-id="@item.OrderId">Cancel</a></td>
        </tr>
    }
        
    </table>
</div>

<p class="button">@Html.ActionLink("Back to Browse", "Index", "Order")</p>

    @section Scripts
    {
        <script src="~/Scripts/App/EventBriteScript.js"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    }




