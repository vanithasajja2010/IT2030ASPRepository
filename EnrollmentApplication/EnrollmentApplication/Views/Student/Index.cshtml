@model IEnumerable<EnrollmentApplication.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div id="starstudent">
    @Ajax.ActionLink("Student of the month",
                     "StudentOfTheMonth",
                     null,
                     new AjaxOptions
                     {
                         UpdateTargetId = "starstudent",
                         InsertionMode = InsertionMode.Replace,
                         HttpMethod = "GET"
                     },
                     new { @class = "btn btn-primary" })

</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Studentlastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Studentfirstname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Studentlastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Studentfirstname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Studentid }) |
            @Html.ActionLink("Details", "Details", new { id=item.Studentid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Studentid })
        </td>
    </tr>
}

</table>

@section Scripts
{
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>    
}


